{% extends 'layout.html.twig' %}

{% block title %}{{ course.title }} - eLEARNING{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Inter', sans-serif;
        }
        .course-header {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: #ffffff;
            padding: 80px 0;
            border-radius: 0 0 24px 24px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
        }
        .course-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://www.transparenttextures.com/patterns/subtle-dots.png');
            opacity: 0.1;
        }
        .course-header img {
            max-height: 300px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
        }
        .course-header h1 {
            font-size: 2.8rem;
            font-weight: 800;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }
        .course-header .lead {
            font-size: 1.3rem;
            opacity: 0.9;
        }
        .progress {
            height: 16px;
            border-radius: 8px;
            background-color: #e2e8f0;
        }
        .progress-bar {
            background-color: #2a5298;
            transition: width 0.5s ease-in-out;
        }
        .course-content {
            padding: 80px 0;
        }
        .part-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .part-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }
        .part-card.locked {
            background: #f1f3f5;
            opacity: 0.7;
        }
        .part-card .btn-view-part {
            background-color: #28a745;
            color: #ffffff;
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            transition: all 0.3s ease;
        }
        .part-card .btn-view-part:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }
        .part-card .btn-view-part:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }
        .content-section {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        .content-section h3 {
            font-size: 2rem;
            font-weight: 700;
            color: #2a5298;
        }
        .content-section video {
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }
        .written-content {
            background: #f9fafb;
            padding: 1.5rem;
            border-radius: 12px;
            line-height: 1.8;
        }
        .geogebra-container {
            background: #ffffff;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }
        .quiz-section {
            background: #f9fafb;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }
        .final-quiz-section {
            background: linear-gradient(135deg, #e6f3ff, #d0e7ff);
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }
        @media (max-width: 768px) {
            .course-header {
                padding: 40px 0;
            }
            .course-header h1 {
                font-size: 2rem;
            }
            .course-header img {
                max-height: 200px;
            }
            .course-content {
                padding: 40px 0;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="course-header animate__animated animate__fadeIn">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                    <img src="{{ course.image ? asset('Uploads/images/' ~ course.image) : 'https://via.placeholder.com/600x400' }}" alt="{{ course.title }}" class="img-fluid">
                </div>
                <div class="col-lg-8 col-md-12">
                    <h1 class="fw-bold">{{ course.title }}</h1>
                    <p class="lead">{{ course.description|u.truncate(200, '...') }}</p>
                    <p><strong>Created by:</strong> {{ course.createdBy.username }} | <strong>Created on:</strong> {{ course.createdAt|date('F j, Y') }}</p>
                    <p><strong>Progress:</strong> {{ progress_percentage|round(2) }}% Complete</p>
                    <div class="progress mb-3">
                        <div class="progress-bar" role="progressbar" style="width: {{ progress_percentage }}%" aria-valuenow="{{ progress_percentage }}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    {% if is_enrolled %}
                        <a href="#course-content" class="btn btn-light btn-lg cta-button">Continue Learning</a>
                    {% else %}
                        <a href="{{ path('app_join_course', {'id': course.id}) }}" class="btn btn-primary btn-lg cta-button">Enroll Now</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <section class="course-content py-5" id="course-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <h3 class="fw-bold mb-4">Course Content</h3>
                    {% for part in course.parts|sort((a, b) => a.partOrder <=> b.partOrder) %}
                        <div class="part-card card shadow-sm rounded-3 mb-3 {% if not is_part_unlocked(part) %}locked{% endif %}">
                            <div class="p-3">
                                <h5 class="part-title">{{ part.partOrder }}. {{ part.title }}</h5>
                                <p>{{ part.description|u.truncate(100, '...') }}</p>
                                <p><i class="fa fa-clock me-2"></i>{{ part.duration ? (part.duration // 60) ~ ' min' : 'N/A' }}</p>
                                {% if is_enrolled %}
                                    <a href="{{ path('app_part_details', {'id': part.id}) }}" 
                                       class="btn btn-sm btn-view-part {% if not is_part_unlocked(part) %}disabled{% endif %}"
                                       {% if not is_part_unlocked(part) %}disabled{% endif %}>
                                        {{ is_part_unlocked(part) ? 'View Part' : 'Locked' }}
                                    </a>
                                {% else %}
                                    <button class="btn btn-sm btn-secondary" disabled>Enroll to Unlock</button>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="col-lg-8">
                    <div class="content-section card shadow-sm rounded-3">
                        {% if current_part %}
                            <h3 class="fw-bold">{{ current_part.title }}</h3>
                            {% if current_part.tutorialContent %}
                                <div class="tutorial p-3 mb-3 bg-light rounded-3 animate__animated animate__fadeIn">
                                    {{ current_part.tutorialContent|raw }}
                                </div>
                            {% endif %}

                            {% if current_part.video %}
                                <div class="mb-4">
                                    <h4>Video Content</h4>
                                    <video controls class="w-100">
                                        <source src="{{ asset('Uploads/videos/' ~ current_part.video.filename) }}" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                    {% if current_part.video.description %}
                                        <p class="mt-3">{{ current_part.video.description }}</p>
                                    {% endif %}
                                </div>
                            {% endif %}

                            {% if current_part.writtenSection %}
                                <div class="mb-4">
                                    <h4>Written Content</h4>
                                    <div class="written-content">
                                        {{ current_part.writtenSection.content|raw }}
                                        {% if current_part.writtenSection.getDecodedMediaUrls() is not null %}
                                            <div class="mt-3">
                                                <h6>Media</h6>
                                                {% for mediaUrl in current_part.writtenSection.getDecodedMediaUrls() %}
                                                    {% if mediaUrl|slice(-4) in ['.jpg', '.png', '.gif'] %}
                                                        <img src="{{ mediaUrl }}" alt="Media" class="img-fluid mb-2 rounded-3" style="max-width: 200px;">
                                                    {% else %}
                                                        <a href="{{ mediaUrl }}" target="_blank" class="btn btn-sm btn-primary mb-2">View Media</a>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                            {% if current_part.geogebraMaterialId %}
                                <div class="geogebra-container card shadow-sm rounded-3 p-4 mt-4">
                                    <h4>Interactive Graphing</h4>
                                    <div id="ggb-element-{{ current_part.id }}" style="width: 100%; height: 400px;"></div>
                                </div>
                            {% endif %}

                            {% if current_part.quiz %}
                                <div class="quiz-section card shadow-sm rounded-3 p-4 mt-4">
                                    <h4>Quiz: Test Your Knowledge</h4>
                                    {% if current_quiz_attempt %}
                                        <p>Your last score: {{ current_quiz_attempt.score }}%</p>
                                        {% if current_quiz_attempt.score >= 70 %}
                                            <p class="text-success">You passed! The next part is unlocked.</p>
                                        {% else %}
                                            <p class="text-danger">You need a score of at least 70% to unlock the next part.</p>
                                        {% endif %}
                                    {% endif %}
                                    <form action="{{ path('app_quiz_submit', {'id': current_part.quiz.id}) }}" method="post">
                                        {% for question in current_part.quiz.questions %}
                                            <div class="quiz-question mb-4">
                                                <h5 class="fw-bold">{{ loop.index }}. {{ question.text }}</h5>
                                                {% if question.type|lower == 'mcq' %}
                                                    {% for option in question.options %}
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" value="{{ option }}" required>
                                                            <label class="form-check-label">{{ option }}</label>
                                                        </div>
                                                    {% endfor %}
                                                {% elseif question.type|lower == 'numeric' %}
                                                    <input type="number" name="answers[{{ question.id }}]" class="form-control mb-2" step="0.01" placeholder="Enter your answer" required>
                                                {% else %}
                                                    <p class="text-danger">Unsupported question type: {{ question.type }}</p>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                        <button type="submit" class="btn btn-primary">Submit Quiz</button>
                                    </form>
                                </div>
                            {% else %}
                                <p class="text-muted">No quiz available for this part yet.</p>
                            {% endif %}
                        {% elseif is_enrolled and not current_part %}
                            <p class="text-muted">You have completed all parts!</p>
                        {% else %}
                            <p class="text-muted">Enroll or complete previous parts to access content.</p>
                        {% endif %}

                        {% if is_course_completed %}
                            <div class="final-quiz-section card shadow-sm rounded-3 p-4 mt-4">
                                <h3 class="fw-bold">Final Course Quiz</h3>
                                <p>Test your understanding of the entire course with this AI-generated quiz.</p>
                                {% if final_quiz %}
                                    <form action="{{ path('app_quiz_submit', {'id': final_quiz.id}) }}" method="post">
                                        {% for question in final_quiz.questions %}
                                            <div class="quiz-question mb-4">
                                                <h5 class="fw-bold">{{ loop.index }}. {{ question.text }}</h5>
                                                {% if question.type|lower == 'mcq' %}
                                                    {% for option in question.options %}
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" value="{{ option }}" required>
                                                            <label class="form-check-label">{{ option }}</label>
                                                        </div>
                                                    {% endfor %}
                                                {% elseif question.type|lower == 'numeric' %}
                                                    <input type="number" name="answers[{{ question.id }}]" class="form-control mb-2" step="0.01" placeholder="Enter your answer" required>
                                                {% else %}
                                                    <p class="text-danger">Unsupported question type: {{ question.type }}</p>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                        <button type="submit" class="btn btn-primary">Submit Final Quiz</button>
                                    </form>
                                {% else %}
                                    <p class="text-muted">Generating final quiz... Please check back soon.</p>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block js %}
    {% if current_part and current_part.geogebraMaterialId %}
        <script defer src="https://www.geogebra.org/apps/deployggb.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const materialId = '{{ current_part.geogebraMaterialId|e('js') }}';
                const partId = {{ current_part.id|e('js')|default('null') }};
                if (materialId && partId) {
                    let ggbApp = new GGBApplet({
                        appName: 'graphing',
                        width: '100%',
                        height: 400,
                        showToolBar: true,
                        showAlgebraInput: true,
                        showMenuBar: true,
                        material_id: materialId
                    }, true);
                    ggbApp.registerAddListener(function(json) {
                        try {
                            let interactionData = { expression: JSON.parse(json).value };
                            fetch('{{ path('app_interaction_save')|e('js') }}', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({
                                    partId: partId,
                                    interactionData: interactionData
                                })
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.status !== 'success') {
                                    console.error('Failed to save interaction:', data.message);
                                }
                            })
                            .catch(error => console.error('Error saving interaction:', error));
                        } catch (e) {
                            console.error('Error parsing GeoGebra JSON:', e);
                        }
                    });
                    ggbApp.inject('ggb-element-{{ current_part.id|e('js') }}');
                }
            });
        </script>
    {% endif %}
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/contrib/auto-render.min.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            try {
                renderMathInElement(document.body, {
                    delimiters: [
                        { left: "$$", right: "$$", display: true },
                        { left: "\\(", right: "\\)", display: false }
                    ],
                    throwOnError: false
                });
            } catch (e) {
                console.error('KaTeX rendering failed:', e);
            }
        });
    </script>
{% endblock %}