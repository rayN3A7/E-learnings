<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}eLEARNING{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    {% block css %}{% endblock %}
</head>
<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">eGENIUS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link" href="{{ path('app_home') }}">Home</a>
                    <a class="nav-item nav-link" href="{{ path('app_about') }}">About</a>
                    <a class="nav-item nav-link" href="{{ path('app_courses') }}">Courses</a>
                    {% if is_granted('ROLE_TEACHER') %}
                        <a class="nav-item nav-link" href="{{ path('app_course_create') }}">Create Course</a>
                    {% endif %}
                    {% if app.user %}
                        <a class="nav-item nav-link" href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a class="nav-item nav-link" href="{{ path('app_login') }}">Login</a>
                        <a class="nav-item nav-link btn btn-outline-light ms-2" href="{{ path('app_join') }}">Join Now</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    {% block body %}
    {% endblock %}

    <!-- Footer Start -->
    <footer class="footer-section text-white py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold">eGENIUS</h5>
                    <p>Learn at your own pace with our comprehensive courses.</p>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('app_home') }}" class="text-white text-decoration-none footer-link">Home</a></li>
                        <li><a href="{{ path('app_about') }}" class="text-white text-decoration-none footer-link">About</a></li>
                        <li><a href="{{ path('app_courses') }}" class="text-white text-decoration-none footer-link">Courses</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold">Contact Us</h5>
                    <p>Email: <a href="mailto:support@elearning.com" class="text-white text-decoration-none">support@elearning.com</a></p>
                    <p>Phone: <a href="tel:+1234567890" class="text-white text-decoration-none">+1 234 567 890</a></p>
                </div>
            </div>
            <hr class="bg-light">
            <p class="text-center mb-0">Â© {{ 'now'|date('Y') }} eLEARNING. All Rights Reserved.</p>
        </div>
    </footer>
    <!-- Footer End -->

    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    {% block js %}{% endblock %}
</body>
</html>